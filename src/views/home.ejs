<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/styles/main.css"> <!-- Adjust the path to your CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">My Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <% if (isAuthenticated) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                    <% } %>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <% if (isAuthenticated) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
  </header>

  <main class="container mt-5">
    <div class="row">
      <% articles.forEach(article => { %>
        <div class="col-12 mb-5">
          <div class="card">
            <!-- Title -->
            <div class="card-header text-center">
              <h2 class="card-title font-weight-bold"><%= article.title %></h2>
            </div>
  
            <!-- Image -->
            <% if (article.image) { %>
              <div class="card-body d-flex justify-content-center">
                <img src="<%= article.image %>" class="img-fluid" alt="<%= article.title %>" style="max-width: 100%; height: auto;">
              </div>
            <% } %>
  
            <!-- Content -->
            <div class="card-body">
              <p class="card-text text-center"><%= article.content %></p>
            </div>
  
            <!-- Tags -->
            <div class="card-footer text-center">
              <% if (article.tags) { %>
                <span class="badge bg-primary"><%= article.tags.join(', ') %></span>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </main>
  
  <!-- Optional custom CSS for enhanced styling -->
  <style>
    .card-header {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  
    .card-body {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  
    .card-footer {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  
    .card-body img {
      max-width: 100%;
      height: auto;
    }
  
    .tags {
      display: block;
      margin-top: 10px;
    }
  </style>
  

  <footer>
    <footer class="bg-light text-center py-3 mt-4">
        <p>&copy; <%= new Date().getFullYear() %> My Blog</p>
    </footer>
    
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
